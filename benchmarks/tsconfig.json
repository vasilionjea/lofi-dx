{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "composite": true,
    "rootDir": ".",
    "strict": false,
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true,
  },
  "include": [
    "*.ts",
     "../src/**/*.ts"
  ],
  "references": [
    {
      "path": "../tsconfig.json",
    }
  ]
}
