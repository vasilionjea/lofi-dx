{
  "type": "module",
  "name": "lofi-dx",
  "version": "1.0.2",
  "main": "dist/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "description": "A small, fast, local-first, searchable index for client side apps written in Typescript.",
  "scripts": {
    "build": "tsc -b src/",
    "clean": "rm -rf dist/",
    "preversion": "npm-run-all format lint",
    "postversion": "git push && git push --tags",
    "release": "./scripts/release.sh",
    "lint": "eslint --ignore-path .eslintignore './src/**/*.{js,ts,tsx}'",
    "format": "prettier --ignore-path .eslintignore --write '**/**/*.{js,ts,tsx}'",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --forceExit",
    "coverage": "jest --coverage",
    "index-stats": "node ./scripts/index-stats.js",
    "benchmarks": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node -T ./benchmarks/index.ts",
    "start": "webpack serve --env dev",
    "demo:prod": "webpack --env prod",
    "demo:build": "npm-run-all format lint demo:prod",
    "demo:gh-pages": "gh-pages -d public",
    "deploy": "npm-run-all demo:build demo:gh-pages"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/benchmark": "^2.1.2",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.50.0",
    "benchmark": "^2.1.4",
    "css-loader": "^6.7.3",
    "eslint": "^8.33.0",
    "gh-pages": "^5.0.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.1",
    "mini-css-extract-plugin": "^2.7.2",
    "npm-run-all": "^4.1.5",
    "object-sizeof": "^2.5.0",
    "prettier": "^2.8.3",
    "pretty-bytes": "^6.0.0",
    "sass": "^1.58.0",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  }
}