{
  "type": "module",
  "name": "lofi-dx",
  "version": "1.1.0",
  "types": "types/src/index.d.ts",
  "description": "A small, fast, local-first, searchable index for client side apps written in Typescript.",
  "exports": {
    "import": "./esm/src/index.js",
    "require": "./cjs/src/index.js",
    "default": "./esm/src/index.js"
  },
  "scripts": {
    "build": "npm-run-all build-esm build-cjs",
    "build-esm": "tsc --project tsconfig.json",
    "build-cjs": "tsc --project tsconfig.cjs.json",
    "clean": "rm -rf dist/",
    "preversion": "npm-run-all format lint",
    "postversion": "git push && git push --tags",
    "release": "./scripts/release.sh",
    "lint": "eslint --ignore-path .eslintignore './src/**/*.{js,ts,tsx}'",
    "format": "prettier --ignore-path .eslintignore --write '**/**/*.{js,ts,tsx}'",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --forceExit",
    "coverage": "jest --coverage",
    "index-stats": "node ./scripts/index-stats.js",
    "benchmarks": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node -T ./benchmarks/index.ts",
    "start": "webpack serve --env dev",
    "demo:prod": "webpack --env prod",
    "demo:build": "npm-run-all format lint demo:prod",
    "demo:gh-pages": "gh-pages -d public",
    "deploy": "npm-run-all demo:build demo:gh-pages"
  },
  "keywords": [
    "lofi-dx",
    "search",
    "fulltext-search",
    "typescript",
    "search-index",
    "search-engine",
    "search-algorithm",
    "inverted-index",
    "tf-idf",
    "delta-encoding",
    "base36"
  ],
  "author": "Vasili Onjea",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasilionjea/lofi-dx.git"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/benchmark": "^2.1.2",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "benchmark": "^2.1.4",
    "css-loader": "^6.8.1",
    "eslint": "^8.46.0",
    "gh-pages": "^6.0.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.4",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "object-sizeof": "^2.6.3",
    "prettier": "^2.8.8",
    "pretty-bytes": "^6.1.1",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  }
}
