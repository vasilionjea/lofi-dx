{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "es6",
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": ".",
    "types": [
      "jest",
      "node"
    ],
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true
  },
  "include": [
    "."
  ],
  "files": [],
  "references": [
    {
      "path": "../tsconfig.json",
    }
  ]
}