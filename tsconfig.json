{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationDir": ".tmp/types",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "example"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    ".tmp"
  ]
}
